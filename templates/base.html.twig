<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
										           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link rel="stylesheet" href="/css/bootstrap.min.css">
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<header>
				<nav class="navbar navbar-expand-lg navbar-dark bg-primary">

					<a class="navbar-brand" href="{{ path("home") }}">PEACE HOTEL</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item active">
								<a class="nav-link" href="/hotel">VISITER L'HOTEL
									<span class="sr-only">(current)</span>
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/annonce">ANNONCES</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/annonce/creer">FORMULAIRE</a>
							</li>
						</ul>
						<ul class="navbar-nav ml-auto">
							<li class="nav-item">
								<a class="nav-link" href="/admin">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Connexion</a>
							</li>
						</ul>
					</div>
				</nav>
			</header>
			<main>
				{% block body %}{% endblock %}
			</main>
			<footer class="mt-5 bg-light py-4 text-center">
				<p>
					Copyright & copy simplon.co !!</p>
			</footer>

			{% block javascripts %}
				{#{{ encore_entry_script_tags('app') }}#}
				<script src="/js/jquery.min.js"></script>
				<script src="/js/popper.js"></script>
				<script src="/js/bootstrap.min.js"></script>
			{% endblock %}
		</div>
	</body>
</html>
